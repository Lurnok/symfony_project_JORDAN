{% extends 'base.html.twig' %}

{% block title %}{{ titre }} d'un produit{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto p-6 bg-white rounded-lg shadow-lg mt-8">
    <h1 class="text-3xl font-semibold text-center text-gray-800 mb-6">
        {{ titre }} un produit
    </h1>

    {{ form_start(form) }}
    <div class="space-y-4">
        <div>
            {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-600'}}) }}
            <div class="mt-1">
                {{ form_widget(form.name, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none'}}) }}
            </div>
        </div>

        <div>
            {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-600'}}) }}
            <div class="mt-1">
                {{ form_widget(form.description, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none'}}) }}
            </div>
        </div>

        <div>
            {{ form_label(form.price, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-600'}}) }}
            <div class="mt-1">
                {{ form_widget(form.price, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none'}}) }}
            </div>
        </div>

        <div>
            {{ form_label(form.image_url, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-600'}}) }}
            <div class="mt-1">
                {{ form_widget(form.image_url, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none'}}) }}
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="w-full py-2 px-4 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300 mt-4">
                {% if titre == "Création" %}Créer{% else %}Modifier{% endif %} le produit
            </button>
        </div>
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}
